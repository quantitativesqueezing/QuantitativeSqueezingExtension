{
  "manifest_version": 3,
  "name": "Quantitative Squeezing Insights",
  "version": "1.0.1",
  "description": "Hover over $TICKER to see float, short interest, CTB, and latest FTD.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://finviz.com/*",
    "https://dilutiontracker.com/*",
    "https://*.dilutiontracker.com/*",
    "https://api.dilutiontracker.com/*",
    "https://*.interactivebrokers.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["css/tooltip.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://dilutiontracker.com/*"],
      "js": ["dilutiontracker_content.js"],
      "css": ["css/tooltip.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://fintel.io/*"],
      "js": ["fintel_content.js"],
      "css": ["css/tooltip.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Quantitative Squeezing Insights"
  }
}